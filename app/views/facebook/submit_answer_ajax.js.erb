<% if @correct %>
    new Effect.Highlight(<%= @answer_element %>, { startcolor:  '#eceff6', endcolor: '#a0f1a1',
                                 restorecolor: '#a0f1a1'});
    location.href='/';
<% else %>
    new Effect.Highlight(<%= @answer_element %>, { startcolor:   '#eceff6', endcolor: '#ffebe8',
                                 restorecolor: '#eceff6'});
    new Effect.Shake(<%= @answer_element %>);
<% end %>